<%- include('../partials/header.ejs'); %>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-3 col-md-6">
          <h1><%= title %></h1>
            <form class="form" method="post">
            <!--Tournament for Player 1 input score-->
              <div class="form-group">
                <label for="PlayerOneTextField">PlayerOne</label>
                <input type="number" class="form-control" id="PlayerOneTextField"
                placeholder="score" name="scoreone" value="<%= tournaments.ScoreOne %>" required>
              </div>
            <!--Tournament for Player 2 input score-->
              <div class="form-group">
                <label for="PlayerTwoTextField">PlayerTwo</label>
                <input type="number" class="form-control" id="PlayerTwoTextField"
                placeholder="score" name="scoretwo" value="<%= tournaments.ScoreTwo %>" required>
              </div>
              <!--Submit and Cancel Button added-->              
              <button type="submit"  class="btn btn-primary"><i class="fa fa-check-square-o"></i> Submit</button>
              <a href="/tournaments" class="btn btn-warning"><i class="fa fa-undo"></i> Cancel</a>
            </form>
        </div>
      </div>
    </div>

<%- include('../partials/footer.ejs'); %>
